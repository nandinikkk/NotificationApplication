<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.location.reminder.SettingsActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#000000">


            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="260dp"
                android:alpha="0.8"
                android:scaleType="fitXY"

                android:src="@drawable/walnut_rate" />

            <include layout="@layout/toolbar" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <com.location.reminder.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="40dp"
                            android:padding="15dp"
                            android:paddingBottom="0dp"
                            android:paddingTop="0dp"
                            android:text="NAME"
                            android:textColor="#fff"
                            android:textSize="16dp" />

                        <com.location.reminder.MyEditText
                            android:id="@+id/name"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:background="#00000000"
                            android:hint=""
                            android:inputType="text"
                            android:paddingLeft="15dp"
                            android:paddingRight="15dp"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="20dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:background="#fff" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <com.location.reminder.MyTextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="20dp"
                            android:text="Preferred locations Max distance"
                            android:textColor="#fff"
                            android:textSize="18dp" />

                        <EditText
                            android:id="@+id/maxdistance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:background="#00000000"
                            android:hint=""

                            android:inputType="number"
                            android:textColor="#fff"
                            android:textColorHint="#fff"
                            android:textSize="14dp" />

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.001dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#fff" />

                </LinearLayout>


            </LinearLayout>


        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.3"
                android:padding="20dp"
                android:text="Email"
                android:textSize="14dp" />

            <com.location.reminder.MyEditText
                android:id="@+id/email"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="textEmailAddress"
                android:padding="16dp" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">


            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="Password"
                android:textSize="14dp"
                android:visibility="gone" />


            <com.location.reminder.MyEditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:inputType="textPassword"
                android:padding="20dp"
                android:visibility="gone" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="Notifications"
                android:textSize="14dp" />

            <com.rey.material.widget.Switch
                android:id="@+id/switchMy"
                style="@style/MaterialSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:checked="true"
                android:elevation="0dp"
                android:gravity="center"
                android:switchPadding="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:text="Suggestions"
                android:textSize="14dp" />

            <com.rey.material.widget.Switch
                android:id="@+id/suggestion_notification"
                style="@style/MaterialSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/logo"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="13dp"
                android:checked="true"
                android:elevation="0dp"
                android:gravity="center"
                android:switchPadding="16dp" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC" />


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f0f0f4"
            android:paddingBottom="10dp"
            android:paddingLeft="22dp"
            android:paddingTop="10dp"
            android:text="Locations"
            android:textColor="#868686"
            android:textSize="16dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="#ACACAC" />

        <LinearLayout
            android:id="@+id/worklocationlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:onClick="worklocation"
            android:orientation="horizontal">


            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="Work"
                android:textSize="14dp" />


            <com.location.reminder.MyTextView
                android:id="@+id/worklocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:padding="20dp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/homelocationlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:onClick="homelocation"
            android:orientation="horizontal">


            <com.location.reminder.MyTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_weight="0.5"
                android:padding="20dp"
                android:text="Home"
                android:textSize="14dp" />


            <com.location.reminder.MyTextView
                android:id="@+id/homelocation"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="#00000000"
                android:padding="20dp" />


        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Suggestions Notifications"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.rey.material.widget.Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:onClick="onchange"
            android:textOff="Off"
            android:textOn="On" />
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="72dp"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:text="Near by Notifications"
            android:textSize="15dp"
            android:textStyle="bold" />

        <com.rey.material.widget.Switch
            android:id="@+id/nearby_notification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="16dp"
            android:checked="true"
            android:onClick="onnchange"
            android:textOff="Off"
            android:textOn="On" />
    </RelativeLayout>


</LinearLayout>
